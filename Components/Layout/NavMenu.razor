@using BisleriumCafe.Data
@inject NavigationManager NavManager

<div class="top-row navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Bislerium Coffee</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class='@(_collapseNavMenu ? "collapse" : "")' @onclick="ToggleNavMenu">
    <nav class="flex-column sidebar">
        <div class="nav-item px-3 mt-4">
            <h5 class="text-light">Hello, <strong>@Username</strong>!</h5>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Home">
                <span class="oi oi-list-rich" /> Menu
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="CoffeeTaken">
                <span class="oi oi-list-rich" /> Orders
            </NavLink>
        </div>
        @if (UserRole == Roles.Admin)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="users">
                    <span class="oi oi-person" /> Users
                </NavLink>
            </div>
        }
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="change-password">
                <span class="oi oi-key" /> Change Password
            </NavLink>
        </div>
        @if (UserRole == Roles.Admin)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="Membership">
                    <span class="oi oi-key" /> Membership
                </NavLink>
            </div>
        }

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Notifications">
                <span class="oi oi-key" /> Reports
            </NavLink>
        </div>
        <div class="nav-item px-3 mt-5">
            <button class="btn btn-danger" @onclick="LogoutHandler">
                <span class="oi oi-account-logout" /> Logout
            </button>
        </div>

    </nav>
</div>


@code {
    [Parameter]
    public string Username { get; set; }
    [Parameter]
    public Roles UserRole { get; set; }
    [Parameter]
    public EventCallback LogoutHandler { get; set; }

    private bool _collapseNavMenu { get; set; } = false; //true originally

    private void ToggleNavMenu()
    {
        _collapseNavMenu = _collapseNavMenu; //! used before.
        Console.WriteLine("Hey");
    }
}
